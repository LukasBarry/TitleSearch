<%= simple_form_for([@buyer.title_reports, @title_report]) do |f| %>
  <div class="form-group">
    <%= f.label :taxes_paid, "Taxes Paid Through:" %>
    <%= f.number_field :taxes_paid, class: "form-control", placeholder: "ex. 2016" %>
  </div>
  <div class="form-group">
    <%= f.label :special_levies, "Special Levies now due and payable:" %>
    <%= f.text_area :special_levies, class: "form-control", rows: 3, placeholder: "List Special Levies" %>
  </div>
  <div class="form-group">
    <%= f.label :restrictive_covenants, "Are there Restrictive Covenants and Conditions?" %><br />
    <%= f.radio_button :restrictive_covenants, "Yes" %>
    <%= f.label :restrictive_covenants, "Yes", :value => "Yes" %>
    <%= f.radio_button :restrictive_covenants, "No" %>
    <%= f.label :restrictive_covenants, "No", :value => "No" %>
    <%= f.radio_button :restrictive_covenants, "Unknown" %>
    <%= f.label :restrictive_covenants, "Unknown", :value => "Unknown" %>
  </div>
  <div class="form-group">
    <%= f.label :covenant_book, "Covenant Book: " %>
    <%= f.number_field :covenant_book, class: "form-control", placeholder: "Book Number" %>
  </div>
  <div class="form-group">
    <%= f.label :covenant_page, "Covenant Page: " %>
    <%= f.number_field :covenant_page, class: "form-control", placeholder: "Page Number" %>
  </div>
  <div class="form-group">
    <%= f.label :restrictions_violated, "Are Restrictions Violated?" %><br />
    <%= f.radio_button :restrictions_violated, "Yes" %>
    <%= f.label :restrictions_violated, "Yes", :value => "Yes" %>
    <%= f.radio_button :restrictions_violated, "No" %>
    <%= f.label :restrictions_violated, "No", :value => "No" %>
    <%= f.radio_button :restrictions_violated, "Unknown" %>
    <%= f.label :restrictions_violated, "Unknown", :value => "Unknown" %>
  </div>
  <div class="form-group">
    <%= f.text_area :restrictions_violated_explain, class: "form-control", rows: 3, placeholder: "Explain any restrictions violated" %>
  </div>
  <div class="form-group">
    <%= f.label :restrictions_forfeiture, "Do restrictions contain reversionary or forfeiture clauses?" %><br />
    <%= f.radio_button :restrictions_forfeiture, "Yes" %>
    <%= f.label :restrictions_forfeiture, "Yes", :value => "Yes" %>
    <%= f.radio_button :restrictions_forfeiture, "No" %>
    <%= f.label :restrictions_forfeiture, "No", :value => "No" %>
    <%= f.radio_button :restrictions_forfeiture, "Unknown" %>
    <%= f.label :restrictions_forfeiture, "Unknown", :value => "Unknown" %>
  </div>
  <div class="form-group">
    <%= f.label :right_of_way, "Does land abut a publicly dedicated right of way or have access thereto over a valid recorded easement?" %><br />
    <%= f.radio_button :right_of_way, "Yes" %>
    <%= f.label :right_of_way, "Yes", :value => "Yes" %>
    <%= f.radio_button :right_of_way, "No" %>
    <%= f.label :right_of_way, "No", :value => "No" %>
    <%= f.radio_button :right_of_way, "Unknown" %>
    <%= f.label :right_of_way, "Unknown", :value => "Unknown" %>
  </div>
  <div class="form-group">
    <%= f.label :right_of_way_explain, "List matters affecting title to land over which valid recorded Easement is located: " %>
    <%= f.text_area :right_of_way_explain, class: "form-control", rows: 3, placeholder: "List Easements" %>
  </div>
  <div class="form-group">
    <%= f.label :prior_policy, "Updating from a previous Title Insurance Policy?" %><br />
    <%= f.radio_button :prior_policy, "Yes" %>
    <%= f.label :prior_policy, "Yes", :value => "Yes" %>
    <%= f.radio_button :prior_policy, "No" %>
    <%= f.label :prior_policy, "No", :value => "No" %>
  </div>
  <div class="form-group">
    <%= f.label :manufactured_home, "Is a mobile or manufactured home located on the property?" %><br />
    <%= f.radio_button :manufactured_home, "Yes" %>
    <%= f.label :manufactured_home, "Yes", :value => "Yes" %>
    <%= f.radio_button :manufactured_home, "No" %>
    <%= f.label :manufactured_home, "No", :value => "No" %>
    <%= f.radio_button :manufactured_home, "Unknown" %>
    <%= f.label :manufactured_home, "Unknown", :value => "Unknown" %>
  </div>
  <div class="form-group">
    <%= f.label :property_occupied_by, "Property is occupied by: " %><br />
    <%= f.radio_button :property_occupied_by, "Owner" %>
    <%= f.label :property_occupied_by, "Owner", :value => "Owner" %>
    <%= f.radio_button :property_occupied_by, "Tenant" %>
    <%= f.label :property_occupied_by, "Tenant", :value => "Tenant" %>
    <%= f.radio_button :property_occupied_by, "Unimproved" %>
    <%= f.label :property_occupied_by, "Unimproved", :value => "Unimproved" %>
  </div>
  <div class="form-group">
    <%= f.label :property_construction, "Is construction on the property in progress or recently completed?" %><br />
    <%= f.radio_button :property_construction, "Yes" %>
    <%= f.label :property_construction, "Yes", :value => "Yes" %>
    <%= f.radio_button :property_construction, "No" %>
    <%= f.label :property_construction, "No", :value => "No" %>
    <%= f.radio_button :property_construction, "Unknown" %>
    <%= f.label :property_construction, "Unknown", :value => "Unknown" %>
  </div>
  <div class="form-group">
    <%= f.label :mechanics_lien_agent, "If yes, has a Mechanics Lien Agent been appointed?" %><br />
    <%= f.radio_button :mechanics_lien_agent, "Yes" %>
    <%= f.label :mechanics_lien_agent, "Yes", :value => "Yes" %>
    <%= f.radio_button :mechanics_lien_agent, "No" %>
    <%= f.label :mechanics_lien_agent, "No", :value => "No" %>
    <%= f.radio_button :mechanics_lien_agent, "Unknown" %>
    <%= f.label :mechanics_lien_agent, "Unknown", :value => "Unknown" %>
  </div>
  <div class="form-group">
    <%= f.text_field :mechanics_lien_agent_name, class: "form-control", placeholder: "Mechanic Lien Agent's Name" %>
  </div>
  <div class="form-group">
    <%= f.label :survey_required, "Is insurance as to matters of survey required?" %><br />
    <%= f.radio_button :survey_required, "Lender" %>
    <%= f.label :survey_required, "Lender", :value => "Lender" %>
    <%= f.radio_button :survey_required, "Owner" %>
    <%= f.label :survey_required, "Owner", :value => "Owner" %>
    <%= f.radio_button :survey_required, "None" %>
    <%= f.label :survey_required, "None", :value => "None" %>
  </div>
  <div class="form-group">
    <%= f.label :use_of_property, "Use of property: " %><br />
    <%= f.radio_button :use_of_property, "Residential" %>
    <%= f.label :use_of_property, "Residential", :value => "Residential" %>
    <%= f.radio_button :use_of_property, "Commercial" %>
    <%= f.label :use_of_property, "Commercial", :value => "Commercial" %>
    <%= f.radio_button :use_of_property, "Other" %>
    <%= f.label :use_of_property, "Other", :value => "Other" %>
  </div>
  <div class=form-group>
    <%= f.text_area :use_of_property_explain, class: "form-control", rows: 3, placeholder: "Other use of property explanation" %>
  </div>
  <div class="actions">
    <%= f.submit class: "btn btn-primary btn-lg" %>
  </div><br />
<% end %>
